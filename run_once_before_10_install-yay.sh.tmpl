#!/usr/bin/env bash
#
# install-yay.sh - install yay AUR helper
#

echo ":: Installing yay"
yayCacheDir="/home/$(whoami)/.cache/yay"
mkdir -p $yayCacheDir
pushd $yayCacheDir
sudo pacman -Sy --noconfirm --needed base-devel git
git clone https://aur.archlinux.org/yay.git
pushd yay
makepkg -si --noconfirm
popd
popd

